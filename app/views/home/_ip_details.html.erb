<div class="col-md-4">

  <table class="table table-hover table-striped">
    <tbody>
    <tr>
      <th>IP</th>
      <td><%= @ip_details[:query] %></td>
    </tr>
    <tr>
      <th>Provider</th>
      <td><a href="https://www.google.com/search?q=Liberty+Mutual+Group" target="_blank"><%= @ip_details[:org] %> </a>
    </tr>
    <tr>
      <th>Hostname</th>
      <td><%= @ip_details[:isp] %></td>
    </tr>
    <tr>
      <th>Country</th>
      <td>
        <span class="flag-icon flag-icon-us"></span> <%= "#{@ip_details[:country]}" "(#{@ip_details[:countryCode]})" %>
      </td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= @ip_details[:city] %></td>
    </tr>
    <tr>
      <th>Region</th>
      <td><%= "#{@ip_details[:regionName]}" "(#{@ip_details[:region]})" %></td>
    </tr>
    <tr>
      <th>Postal Code</th>
      <td><%= @ip_details[:zip] %></td>
    </tr>
    <tr>
      <th>Longitude</th>
      <td><%= @ip_details[:lon] %></td>
    </tr>
    <tr>
      <th>Latitude</th>
      <td><%= @ip_details[:lat] %></td>
    </tr>
    <tr>
      <th>TimeZone</th>
      <td><%= @ip_details[:timezone] %></td>
    </tr>
    </tbody>
  </table>
</div>

<div class="col-md-8">
  <div id="map_div" style="height: 360px;"></div>
</div>

<script>

    ipLocation.initMap('<%= @ip_details[:lat] %>', '<%= @ip_details[:lon] %>')

</script>