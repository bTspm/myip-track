<br>
<div class="container">

  <%= form_tag(root_path, method: :get, remote: true) do %>
  <div class="container">
    <div class="input-group">
      <input type="text" value="<%= params[:search_query] %>" name="search_query" class="form-control" placeholder="IP or Domain Name" id="txtSearch"/>
      <div class="input-group-btn">
        <button class="btn btn-primary" type="submit">
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </div>
    </div>
  </div>
  <% end %>

  <br>

  <div id="ip_details">
    <%= render partial: 'home/ip_details' %>
  </div>

</div>

